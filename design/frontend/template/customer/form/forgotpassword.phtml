<h1><?php echo $this->__('Forgot Your Password?') ?></h1>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<form action="<?php echo $this->getUrl('*/*/forgotpasswordpost') ?>" method="post" id="form-validate">
    <fieldset>
        <h2><?php echo $this->__('Retrieve your password here') ?></h2>
        <p><?php echo $this->__('Please enter your email below and we will send you a new password.') ?></p>
        <ul>
            <li>
                <label for="email_address" class="required"><em class="required">*</em> <?php echo $this->__('Email Address') ?></label>
                <input type="text" name="email" alt="email" id="email_address" class="text required-entry validate-email" value="<?php echo $this->htmlEscape($this->getEmailValue()) ?>" />
            </li>
        </ul>
    </fieldset>
    <div class="buttons-set">
        <p class="required"><?php echo $this->__('* Required Fields') ?></p>
        <a href="<?php echo $this->helper('customer')->getLoginUrl() ?>"><?php echo $this->__('Back') ?></a>
        <button type="submit" title="<?php echo $this->__('Retrieve Password') ?>" class="button"><?php echo $this->__('Retrieve Password') ?></button>
    </div>
</form>
