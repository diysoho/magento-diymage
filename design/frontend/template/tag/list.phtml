<aside id="product-tags"> 
    <h2><?php echo $this->__('Product Tags') ?></h2> 
    <?php echo $this->getChildHtml('list_before')?>
    <?php if( $this->getCount() ): ?>
       <h3><?php echo $this->__('Other people marked this product with these tags:') ?></h3> 
       <ul class="product-tags">
           <?php echo $this->renderTags('<li><a href="%1$s">%2$s <span class="amount">(%3$s)</span></a></li>') ?>
       </ul>
    <?php endif; ?>
    <form id="add-tags" action="<?php echo $this->getFormAction(); ?>" method="get"> 
       <label for="productTagName"><?php echo $this->__('Add Your Tags:') ?></label> 
       <input type="text" class="text required-entry" name="productTagName" id="productTagName" /> 
       <input type="submit" title="<?php echo $this->__('Add Tags') ?>" class="button" value="<?php echo $this->__('Add Tags') ?>" /> 
    </form> 
    <p class="note"><?php echo $this->__("Use spaces to separate tags. Use single quotes (') for phrases.") ?></p>
    <script type="text/javascript">
    //<![CDATA[
        var addTagFormJs = new VarienForm('add-tags');
        function submitTagForm(){
            if(addTagFormJs.validator.validate()) {
                addTagFormJs.form.submit();
            }
        }
    //]]>
    </script>
</aside>
