<?php $_helper = $this->helper('catalog/output'); ?>
<?php $_product = $this->getProduct(); ?>
<?php $d = Mage::helper('diy') ?>
<?php $store = Mage::app()->getStore()->getStoreId(); ?>
<?php $show_facebook = $d->getValue("catalog_product_view", "show_facebook", $store) ?>
<?php $show_twitter = $d->getValue("catalog_product_view", "show_twitter", $store) ?>
<?php $show_google = $d->getValue("catalog_product_view", "show_google", $store) ?>
<?php $show_email = $d->getValue("catalog_product_view", "show_email", $store) ?>

<?php if ($this->canEmailToFriend() && $show_email): ?>
<a href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_product) ?>"><?php echo $this->__('Email to a Friend') ?></a>
<?php endif; ?>
<?php if ($show_facebook || $show_twitter || $show_google || $show_email): ?>
    <!-- AddThis Button BEGIN -->
    <div class="addthis_toolbox addthis_default_style addthis_32x32_style">
