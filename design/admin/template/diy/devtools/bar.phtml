<?php
$cache_types = Mage::helper('core')->getCacheTypes();

$cache_total_count = 0;
$cache_enabled_count = 0;
foreach ($cache_types as $type => $label) {
    $cache_total_count++;
    if (Mage::app()->useCache($type)) {
        $cache_enabled_count++;
    }
}

if ($cache_enabled_count == 0) {
    $colour = 'green';
} else if ($cache_enabled_count == $cache_total_count) {
    $colour = 'red';
} else {
    $colour = 'orange';
}
?>
<div id="diymage_devtools_bar">
    <div class="handles">
        <b>Layout Handles:</b> <?php echo join(", ", Mage::app()->getLayout()->getUpdate()->getHandles()) ?>.<br />
        <a href="#" onclick="$('diymage_devtools_bar').hide(); return false">Close Bar</a>
    </div>
    <div class="system">
        <ul>
            <li>
                Cache: <span style="color: <?php echo $colour ?>; font-weight: bold;"><?php echo sprintf("%d/%d enabled", $cache_enabled_count, $cache_total_count)?></span> (<a href="<?php echo $this->getUrl('diy/devtools/cacheDisable') ?>">Disable All</a>, <a href="<?php echo $this->getUrl('diy/devtools/cacheRefresh') ?>">Refresh</a>)</li>
            <li>Indexes: <span style="color: green; font-weight: bold;">Refreshed</span> (<a href="<?php echo $this->getUrl('diy/devtools/indexRefresh') ?>">Force Refresh</a>)</li>
        </ul>
    </div>
</div>

