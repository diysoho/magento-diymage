<nav> 
    <ul>
        <?php foreach ($this->getStoreCategories() as $child): ?>
            <?php if ($child->getIsActive()): ?>
                <?php renderCategoryChildren($child) ?>
            <?php endif ?>
        <?php endforeach ?>
        ?> 
    </ul> 
</nav> 
