<?php
function renderCategoryChildren($category) {
    ?>
    <li>
        <a href=""><?php echo $category->getName() ?></a>
        <?php if ($category->getChildren()->count() > 0): ?>
            <?php foreach ($category->getChildren() as $child): ?>
                <ul>
                    <?php renderCategoryChildren($child) ?>
                </ul>
            <?php endforeach ?>
        <?php endif ?>
    </li>
    <?php
}
?>
