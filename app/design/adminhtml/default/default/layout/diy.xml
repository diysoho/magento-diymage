<layout>
    
    <default>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>diy/js/jquery/jquery-1.4.3.min.js</name><if /></action>
            <action method="addItem"><type>skin_js</type><name>diy/js/jquery/jquery-ui-1.8.6.custom.min.js</name><if /></action>
            <action method="addItem"><type>skin_js</type><name>diy/js/jquery/jquery.json-2.2.min.js</name><if /></action>
            <action method="addItem"><type>skin_js</type><name>diy/js/json2.js</name><if /></action>
            
            <action method="addItem"><type>skin_js</type><name>diy/js/yahoo.color.js</name><if /></action>
            <action method="addItem"><type>skin_js</type><name>diy/js/colorpicker.js</name><if /></action>
            <action method="addItem"><type>skin_js</type><name>diy/js/diymage.js</name><if /></action>
            
            <action method="addItem"><type>skin_css</type><name>diy/css/colorpicker.css</name><params /></action>
            <action method="addItem"><type>skin_css</type><name>diy/css/controls.css</name><params /></action>
        </reference>
    </default>
    
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>diy/js/settings_screen.js</name><if /></action>
        </reference>
    </adminhtml_system_config_edit>
    
    <diy_design>
        <reference name="content">
            <block type="diy/admin_helplink" name="diy.admin.helplink" as="helplink" template="diy/helplink.phtml" />
        </reference>
    </diy_design>
    
    <diy_design_index>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_global" name="diy.admin.design.content" as="diy" template="diy/design/global.phtml" />
        </reference>
    </diy_design_index>
    
    <diy_design_homepage>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_homepage" name="diy.admin.design.content" template="diy/design/homepage.phtml" />
        </reference>
    </diy_design_homepage>
    
    <diy_design_listing>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_listing" name="diy.admin.design.content" template="diy/design/listing.phtml" />
        </reference>
    </diy_design_listing>
    
    <diy_design_product>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_product" name="diy.admin.design.content" template="diy/design/product.phtml" />
        </reference>
    </diy_design_product>
    
    <diy_design_checkout>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_checkout" name="diy.admin.design.content" template="diy/design/checkout.phtml" />
        </reference>
    </diy_design_checkout>
    
    <diy_design_cart>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_cart" name="diy.admin.design.content" template="diy/design/cart.phtml" />
        </reference>
    </diy_design_cart>
    
    <diy_design_catalogsearch>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_catalogsearch" name="diy.admin.design.content" template="diy/design/catalogsearch.phtml" />
        </reference>
    </diy_design_catalogsearch>
    
    <diy_design_advancedsearch>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_advancedsearch" name="diy.admin.design.content" template="diy/design/advancedsearch.phtml" />
        </reference>
    </diy_design_advancedsearch>
    
    <diy_design_contacts>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_contacts" name="diy.admin.design.content" template="diy/design/contacts.phtml" />
        </reference>
    </diy_design_contacts>
    
    <diy_design_noroute>
        <update handle="diy_design" />
        <reference name="content">
            <block type="diy/admin_design_noroute" name="diy.admin.design.content" template="diy/design/noroute.phtml" />
        </reference>
    </diy_design_noroute>
    
</layout>