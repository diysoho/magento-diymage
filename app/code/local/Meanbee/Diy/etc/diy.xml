<?xml version="1.0" encoding="UTF-8"?>
<config>
    <diy>
        <attributes>
            <global>
                <font_colour>
                    <label>Font Colour</label>
                    <help>This is the default colour of the text on your store.</help>
                    <value>666666</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>10</sort_order>
                </font_colour>
                <link_colour>
                    <label>Link Colour</label>
                    <help>This is the colour of the links on your site.</help>
                    <value>ffcc00</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>20</sort_order>
                </link_colour>
                <link_hover_colour>
                    <label>Link Hover Colour</label>
                    <help>This is the colour that the links go when you hover.</help>
                    <value>555555</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>30</sort_order>
                </link_hover_colour>
                <font_size>
                    <label>Font Size</label>
                    <help>This value will be the size of the default text around the site.  It's not common to change this from 10-12px.</help>
                    <value>10</value>
                    <input_control>diy/admin_control_unit_px</input_control>
                    <sort_order>40</sort_order>
                </font_size>
                <font_family>
                    <label>Font Family</label>
                    <help>This font will be the default font on all elements</help>
                    <value>arial</value>
                    <input_control>diy/admin_control_font</input_control>
                    <sort_order>50</sort_order>
                </font_family>
                <input_colour>
                    <label>Input Colour</label>
                    <help>This is the colour used for all default inputs.</help>
                    <value>2F2F2F</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>60</sort_order>
                </input_colour>
                <input_font_family>
                    <label>Input Font Family</label>
                    <help>This is the font used on all default inputs.</help>
                    <value>arial</value>
                    <input_control>diy/admin_control_font</input_control>
                    <sort_order>70</sort_order>
                </input_font_family>
                <input_font_size>
                    <label>Input Font Size</label>
                    <help>This is the size for text inside inputs.</help>
                    <value>12</value>
                    <input_control>diy/admin_control_unit_px</input_control>
                    <sort_order>80</sort_order>
                </input_font_size>
                <input_background_colour>
                    <label>Input Background Colour</label>
                    <help>This is the background colour all default inputs.</help>
                    <value>FFFFFF</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>90</sort_order>
                </input_background_colour>
                <input_border_colour>
                    <label>Input Border Colour</label>
                    <help>This is the default input border colour.</help>
                    <value>B6B6B6</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>100</sort_order>
                </input_border_colour>
                <input_text_padding>
                    <label>Text Input Box Padding</label>
                    <help>This is the padding around each text input box.</help>
                    <value>2</value>
                    <input_control>diy/admin_control_unit_px</input_control>
                    <sort_order>110</sort_order>
                </input_text_padding>
                <header_link_colour>
                    <label>Header Link Colour</label>
                    <help>This is the colour of links in the header</help>
                    <value>ffcc00</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>120</sort_order>
                </header_link_colour>
                <show_categories>
                    <label>Show Categories?</label>
                    <help>This control decides whether to show the categories along the top of the page, or not.</help>
                    <value>1</value>
                    <input_control>diy/admin_control_boolean</input_control>
                    <sort_order>130</sort_order>
                </show_categories>
                <nav_bar_background>
                    <label>Navigation Bar Background Colour</label>
                    <help>This is the background colour of the navigation bar.</help>
                    <value></value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>140</sort_order>
                </nav_bar_background>
                <nav_item_background>
                    <label>Navigation Item Background Colour</label>
                    <help>This is the background colour of an item in the navigation bar.</help>
                    <value></value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>150</sort_order>
                </nav_item_background>
                <nav_item_link_colour>
                    <label>Navigation Item Link Colour</label>
                    <help>This is the colour of a navigation link.</help>
                    <value>A7C6DD</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>160</sort_order>
                </nav_item_link_colour>
                <nav_item_active_link_colour>
                    <label>Navigation Item Active Link Colour</label>
                    <help>This is the colour of an active navigation link.</help>
                    <value>D96708</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>170</sort_order>
                </nav_item_active_link_colour>
                <nav_item_link_hover_colour>
                    <label>Navigation Item Hover Link Colour</label>
                    <help>This is the colour of a navigation link when hovered over.</help>
                    <value>D96708</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>180</sort_order>
                </nav_item_link_hover_colour>
                <nav_sub_item_background_colour>
                    <label>Navigation Sub-menu Item Background Colour</label>
                    <help>This is the background colour of sub lists in the navigation bar.</help>
                    <value>ECF3F6</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>190</sort_order>
                </nav_sub_item_background_colour>
                <nav_sub_item_link_colour>
                    <label>Navigation Sub-menu Item Link Colour</label>
                    <help>This is the colour of links in sub lists in the navigation bar.</help>
                    <value>2F2F2F</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>200</sort_order>
                </nav_sub_item_link_colour>
                <nav_sub_item_background_hover_colour>
                    <label>Navigation Sub-menu Item Hover Background Colour</label>
                    <help>This is the background colour of a sub list item in the navigation bar when hovered over.</help>
                    <value>D5E4EB</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>210</sort_order>
                </nav_sub_item_background_hover_colour>
                <nav_sub_item_link_hover_colour>
                    <label>Navigation Sub-menu Item Link Hover Colour</label>
                    <help>Set the colour of a sub-menu link when hovered over.</help>
                    <value>2F2F2F</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>220</sort_order>
                </nav_sub_item_link_hover_colour>
                <nav_sub_list_border>
                    <label>Show Nav Sub-menu Border?</label>
                    <help>This control decides whether to draw, or not to draw, the border around the sub menus in the navigation bar.</help>
                    <value>1</value>
                    <input_control>diy/admin_control_boolean</input_control>
                    <sort_order>230</sort_order>                 
                </nav_sub_list_border>
                <nav_sub_list_border_colour>
                    <label>Navigation Sub-Menu Border Colour</label>
                    <help>If showing, set the border colour of the navigation bar sub lists.</help>
                    <value>899BA5</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>240</sort_order>
                </nav_sub_list_border_colour>           
            </global>
            <catalog_product_view>
                <builder>
                    <label>Builder</label>
                    <help></help>
                    <value></value>
                    <input_control>diy/admin_control_builder</input_control>
                    <sort_order>0</sort_order>
                </builder>
                <layout>
                    <label>Page Layout</label>
                    <help>This is the main structural layout of the page.</help>
                    <value>page/2columns-right.phtml</value>
                    <input_control>diy/admin_control_dropdown</input_control>
                    <source_model>diy/source_layout</source_model>
                    <sort_order>10</sort_order>
                </layout>
            </catalog_product_view>
            <catalog_category_view>
                <builder>
                    <label>Builder</label>
                    <help></help>
                    <value></value>
                    <input_control>diy/admin_control_builder</input_control>
                    <sort_order>0</sort_order>
                </builder>
                <layout>
                    <label>Page Layout</label>
                    <help>This is the main structural layout of the page.</help>
                    <value>page/3columns.phtml</value>
                    <input_control>diy/admin_control_dropdown</input_control>
                    <source_model>diy/source_layout</source_model>
                    <sort_order>10</sort_order>
                </layout>
                <pager_border>
                    <label>Show Pager Border?</label>
                    <help>This control decides whether to draw, or not to draw, the border around the pager toolbar containing the page numbers, etc.</help>
                    <value>1</value>
                    <input_control>diy/admin_control_boolean</input_control>
                    <sort_order>20</sort_order>
                </pager_border>
                <pager_background>
                    <label>Pager Background Colour</label>
                    <help>This control decides what the background colour of the pager toolbar containing the page numbers, etc, should be.</help>
                    <value>EEEEEE</value>
                    <input_control>diy/admin_control_colour</input_control>
                    <sort_order>30</sort_order>
                </pager_background>
            </catalog_category_view>
            <checkout_cart_index>
                <builder>
                    <label>Builder</label>
                    <help></help>
                    <value></value>
                    <input_control>diy/admin_control_builder</input_control>
                    <sort_order>0</sort_order>
                </builder>
                <layout>
                    <label>Page Layout</label>
                    <help>This is the main structural layout of the page.</help>
                    <value>page/1column.phtml</value>
                    <input_control>diy/admin_control_dropdown</input_control>
                    <source_model>diy/source_layout</source_model>
                    <sort_order>10</sort_order>
                </layout>
            </checkout_cart_index>
            <checkout_onepage_index>
                <builder>
                    <label>Builder</label>
                    <help></help>
                    <value></value>
                    <input_control>diy/admin_control_builder</input_control>
                    <sort_order>0</sort_order>
                </builder>
                <layout>
                    <label>Page Layout</label>
                    <help>This is the main structural layout of the page.</help>
                    <value>page/1column.phtml</value>
                    <input_control>diy/admin_control_dropdown</input_control>
                    <source_model>diy/source_layout</source_model>
                    <sort_order>10</sort_order>
                </layout>
            </checkout_onepage_index>
            <contacts_index_index>
                <builder>
                    <label>Builder</label>
                    <help></help>
                    <value></value>
                    <input_control>diy/admin_control_builder</input_control>
                    <sort_order>0</sort_order>
                </builder>
                <layout>
                    <label>Page Layout</label>
                    <help>This is the main structural layout of the page.</help>
                    <value>page/2columns-right.phtml</value>
                    <input_control>diy/admin_control_dropdown</input_control>
                    <source_model>diy/source_layout</source_model>
                    <sort_order>10</sort_order>
                </layout>
            </contacts_index_index>
        </attributes>
    </diy>
</config>