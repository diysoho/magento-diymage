<config>
    <modules>
        <Meanbee_Diy>
            <version>0.1.0</version>
        </Meanbee_Diy>
    </modules>
    <global>
        <models>
            <diy>
                <class>Meanbee_Diy_Model</class>
                <resourceModel>diy_eav</resourceModel>
            </diy>
            <diy_eav>
                <class>Meanbee_Diy_Model_Eav</class>               
                <entities>  
                    <data><table>diy_eav</table></data>  
                </entities>
            </diy_eav>
        </models>
        <blocks>
            <diy>
                <class>Meanbee_Diy_Block</class>
            </diy>
        </blocks>
        <helpers>
            <diy>
                <class>Meanbee_Diy_Helper</class>
            </diy>
        </helpers>
        <resources>
            <diy_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </diy_write>
            <diy_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </diy_read>   
            <diy_setup>
                <setup>
                    <module>Meanbee_Diy</module>
                    <class>Meanbee_Diy_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </diy_setup>
        </resources>
        <events>
            <controller_action_layout_generate_xml_before>
                <observers>
                    <diy_layouts>
                        <type>singleton</type>
                        <class>diy/observer</class>
                        <method>layoutUpdates</method>
                    </diy_layouts>
                </observers>
            </controller_action_layout_generate_xml_before>
        </events>
    </global>
    
    <admin>
        <routers>
            <diy>
                <use>admin</use>
                <args>
                    <module>Meanbee_Diy</module>
                    <frontName>diy</frontName>
                </args>
            </diy>
        </routers>
    </admin>
    
    <adminhtml>
        <layout>
            <updates>
                <diy>
                    <file>diy.xml</file>
                </diy>
            </updates>
        </layout>
    </adminhtml>
</config>